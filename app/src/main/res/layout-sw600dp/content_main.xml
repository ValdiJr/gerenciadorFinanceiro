
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    >

<TextView android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    android:text="Today"
    android:textColor="#ffffff"
    android:textSize="22sp"
    android:textStyle="bold"
    android:background="#AFA7EF"
    android:gravity="center"
    xmlns:android="http://schemas.android.com/apk/res/android" />


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:baselineAligned="false"
    android:divider="?android:attr/dividerHorizontal"
    android:orientation="horizontal"
    tools:context="com.smartcase.vfnj_jbsn.gerenciadorfinanceiro.MainActivity"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">



    <fragment
        android:id="@+id/fragment_forecast"
        android:name="com.smartcase.vfnj_jbsn.gerenciadorfinanceiro.LatestsEntryFragment"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        tools:layout="@layout/lastests_entry_fragment_main" />

    <FrameLayout
        android:id="@+id/entry_detail_container"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="4" />

</LinearLayout>
</LinearLayout>



