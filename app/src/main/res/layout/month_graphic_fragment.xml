<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.smartcase.vfnj_jbsn.gerenciadorfinanceiro.graphic.MonthGraphicActivityFragment"
    tools:showIn="@layout/month_graphic_activity">


    <com.github.mikephil.charting.charts.PieChart
        android:id="@+id/piechart"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.smartcase.vfnj_jbsn.gerenciadorfinanceiro.graphic.MonthDetailFragment"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" />


    <Button
        android:id="@+id/buttonViewDays"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Days" />
    />

</android.support.constraint.ConstraintLayout>
